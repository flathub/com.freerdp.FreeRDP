{
    "name": "SDL3",
    "buildsystem": "cmake-ninja",
    "builddir": true,
    "config-opts": [
        "-DCMAKE_VERBOSE_MAKEFILE=ON",
        "-DCMAKE_BUILD_TYPE:STRING=Release",
        "-DCMAKE_INSTALL_LIBDIR:PATH=lib"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/libsdl-org/SDL/releases/download/release-3.2.20/SDL3-3.2.20.tar.gz",
            "sha256": "467600ae090dd28616fa37369faf4e3143198ff1da37729b552137e47f751a67",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 4781,
                "stable-only": true,
                "url-template": "https://github.com/libsdl-org/SDL_image/releases/download/release-${version}/SDL3-${version}.tar.gz"
            }
        }
    ],
    "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/*.a",
        "/lib/cmake",
        "/share/aclocal",
        "/lib/pkgconfig"
    ]
}
